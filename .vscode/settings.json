{
    // VSCode全体設定
    "editor.wordSeparators": "`*&~!$#%^=+[{()]}/\\|;:'\",.<>?",
    "editor.detectIndentation": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always"
    },
    "[python]": {
        "editor.wordSeparators": "`~!$#%^-=+[{()]}\\|;:'\",.<>?",
        "editor.defaultFormatter": "ms-python.black-formatter",
    },
    "python.defaultInterpreterPath": "/usr/local/bin/python",
    "flake8.args": [
        "--max-line-length",
        "120",
        "--ignore",
        "D100,D105,D107,D202,D205,D400,T499,W503,F821,E712,E711"
    ],
    // スペルチェックの除外単語設定
    "cSpell.ignoreWords": [
        // python
        "mypy",
        "isort",
        "pytest",
        "autopep",
        "boto",
        "botocore",
        "exceptiongroup",
        "iniconfig",
        "jmespath",
        "mccabe",
        "pathspec",
        "platformdirs",
        "pluggy",
        "pycodestyle",
        "pyflakes",
        "Pygments",
        "pylint",
        "dateutil",
        "tomli",
        "tomlkit",
        "urllib",
        "KEEPALIVE",
        "pycache",
        // MySQL / SQL関連
        "aidarkhanov",
        "dsn",
        "sqlx",
        "tx",
        "varchar",
        "int",
        "tinyint",
        "datetime",
        "initdb",
        "mysqld",
        "mysqladmin",
        "googleusercontent",
        // WebAPI・一般的な開発用語
        "esbenp",
        "myapp",
        "tmpl",
        "api",
        "req",
        "res",
        "http",
        "https",
        "json",
        "jwt",
        "uuid",
        "csrf",
        "cli",
        "sdk",
        "idempotent",
        "middleware",
        "multiclient",
        "saoudrizwan",
        "valueobject",
        "localstack",
        "ABCDEFGHJKLMNPQRSTUVWXYZabcdefghijkmnpqrstuvwxyz",
        // 日本語由来や略語
        "kana",
        "hira",
        "zenkaku",
        "hankaku",
        "meisyo",
        "toroku",
        "kensaku",
        "shain",
        "shozoku",
        "simei",
        "kigou",
        // 拡張機能
        "mosapride",
        "zenkak",
        "bierner"
    ]
}